<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <title>URL_Shortener</title>
</head>
<body>
    <div class="container">
        <h1>URL Shrinker</h1>
        <form action="/shortUrls" method="POST" class="my-4 form-inline">
          <input type="url" name="fullUrl" id="fullUrl" placeholder="Enter your URL here..." required class="form-control col mr-2 ">
          <button type="submit" class="submit-btn btn-primary btn">Shrink URL</button>
        </form>
        <br>
        <br>
        <table class="table table-striped table-responsive">
            <tr>
                <thead>Full URL</thead>
                <thead>Short URL</thead>
                <thead>Clicks</thead>
            </tr>
            <tbody>
                <% shortUrls.forEach(shortUrl => { %>
                    <tr>
                        <td><a href="<%= shortUrl.full  %>"><%= shortUrl.full  %></a></td>
                        <td><a href="<%= shortUrl.short  %>"><%= shortUrl.short  %></a></td>
                        <td><%= shortUrl.clicks %></td>
                    </tr>
                <% }) %>   
            </tbody>
        </table>
      </div>
</body>
</html>